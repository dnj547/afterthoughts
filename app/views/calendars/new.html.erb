<div class="container">
  <h1>New Calendar</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @calendar do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.hidden_field(:user_id, :value=>params[:user_id]) %>
        <%= f.submit "Create Calendar", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
