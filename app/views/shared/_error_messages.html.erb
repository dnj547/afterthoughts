<div class="bootstrap-iso">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% if @user %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <% flash.each do |type, msg| %>
                <% if type == "alert" %>
                  <div class="alert alert-danger">
                    The form contains <%= pluralize(@user.errors.count, "error") %>.
                  </div>
                  <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                <% elsif type == "notice" %>
                  <div class="alert alert-success">
                <% else %>
                  <div class='alert alert-<%= "#{type}" %>'>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <% if @event %>
          <% if @event.errors.any? %>
            <div id="error_explanation">
              <% flash.each do |type, msg| %>
                <% if type == "alert" %>
                  <div class="alert alert-danger">
                    The form contains <%= pluralize(@event.errors.count, "error") %>.
                  </div>
                  <ul>
                  <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                <% elsif type == "notice" %>
                  <div class="alert alert-success">
                <% else %>
                  <div class='alert alert-<%= "#{type}" %>'>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <% if @afterthought %>
          <% if @afterthought.errors.any? %>
            <div id="error_explanation">
              <% flash.each do |type, msg| %>
                <% if type == "alert" %>
                  <div class="alert alert-danger">
                    The form contains <%= pluralize(@afterthought.errors.count, "error") %>.
                  </div>
                  <ul>
                  <% @afterthought.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                <% elsif type == "notice" %>
                  <div class="alert alert-success">
                <% else %>
                  <div class='alert alert-<%= "#{type}" %>'>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
