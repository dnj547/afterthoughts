<%= @user.username %>'s Event <br>
<%= flash[:message] %><br>

Calendar: <%= @event.calendar.name %><br>
Event: <%= @event.title %><br>
Visibility: <%= @event.visibility %><br>
Organizer: <%= @event.organizer %><br>
Description: <%= @event.description %><br>
Location: <%= @event.location %><br>
Start: <%= @event.start.strftime("%A, %b %eth, %Y at %l:%M %P ")%><br>
End: <%= @event.end.strftime("%A, %b %eth, %Y at %l:%M %P ") %><br>

<%= button_to "Edit Event", "/events/#{@event.id}/edit", method:"get" %><br>

<%= button_to "Delete Event", @event, method:"delete" %><br>

<% if @event.afterthought == nil %>
  <%= button_to "Add Afterthought", "/afterthoughts/new/#{@event.id}", method: "get" %>
<% else %>
  <%= button_to "View Afterthought", "/afterthoughts/#{@event.afterthought.id}", method: "get" %>
<% end %>