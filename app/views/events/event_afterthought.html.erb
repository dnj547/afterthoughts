<div class="bootstrap-iso">
  <div class="event_afterthought">

  <div class="event_afterthought_event">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2>Event Details</h2>
          <new-heading><b>Calendar: </b><%= @event.calendar.name.capitalize %></new-heading>
          <new-heading><b>Event: </b> <%= @event.title.capitalize %></new-heading>
          <new-heading><b>Organizer: </b><%= @event.organizer.capitalize %></new-heading>
          <new-heading><b>Description: </b><%= @event.description %></new-heading>
          <new-heading><b>Location: </b><%= @event.location.capitalize %></new-heading>
          <new-heading><b>Start: </b><%= @event.start.strftime("%A, %b %eth, %Y at %l:%M %P ")%></new-heading>
          <new-heading><b>End: </b><%= @event.end.strftime("%A, %b %eth, %Y at %l:%M %P ") %></new-heading>
          <new-heading><b>Attendees: </b></new-heading>

          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <%@event.attendees.each do |attendee|%>
              <tr>
                <td><%=attendee.name%></td>
                <td><%=attendee.notes%></td>
              </tr>
              <%end%>
            </tbody>
          </table>

          <%= link_to "Edit Event", "/events/#{@event.id}/edit", class: "btn btn-lg btn-primary" %>
          <% if @event.afterthought == nil %>
          <%= link_to "Add Afterthought", "/afterthoughts/new/#{@event.id}", class: "btn btn-lg btn-primary" %>
          <% else %>
          <%= link_to "View Afterthought", "/afterthoughts/#{@event.afterthought.id}", class: "btn btn-lg btn-primary" %>
          <% end %>
          <%= link_to "Add Attendee", "/events/attendees/new/#{@event.id}", class: "btn btn-lg btn-primary" %>
          <%= link_to "Delete Event", @event, method:"delete", class: "btn btn-lg btn-danger" %>

        </div>
      </div>
    </div>
  </div>

  <div class="event_afterthought_afterthought">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2>Afterthought Details </h2>
          <new-heading><b>Event: </b><%=@afterthought.event.title%></new-heading>
          <new-heading><b>Actual Location: </b> <%=@afterthought.actual_location%></new-heading>
          <new-heading><b>Actual Start: </b> <%=@afterthought.actual_start.strftime("%A, %b %eth, %Y at %l:%M %P ")%></new-heading>
          <new-heading><b>Actual End: </b><%=@afterthought.actual_end.strftime("%A, %b %eth, %Y at %l:%M %P ")%></new-heading>
          <new-heading><b>Actual Description: </b><%=@afterthought.actual_description%></new-heading>
          <new-heading><b>Thoughts: </b><%=@afterthought.thoughts%></new-heading>
          <new-heading><b>Rating: </b><%=@afterthought.rating%></new-heading>
          <new-heading><b>Actual Attendees: </b></new-heading>
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <%@afterthought.attendees.each do |attendee|%>
                <tr>
                  <td><%=attendee.name%></td>
                  <td><%=attendee.notes%></td>
                </tr>
              <%end%>
            </tbody>
          </table>
            <%= link_to "Edit Afterthought", "/afterthoughts/#{@afterthought.id}/edit", class: "btn btn-lg btn-primary" %>
            <%= link_to "View Event Details", @afterthought.event, class: "btn btn-lg btn-primary" %>
            <%= link_to "Add Attendee", "/afterthoughts/attendees/new/#{@afterthought.id}", class: "btn btn-lg btn-primary" %>
              <%= link_to "Delete Afterthought", @afterthought, method:"delete", class: "btn btn-lg btn-danger" %>
        </div>
      </div>
    </div>
  </div>
    </div>
</div>
