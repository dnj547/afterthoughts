<h1><%=@user.username%></h1><br>
<%= button_to "Add New Calendar", "/calendars/new", method:"get" %>
<br>

<% @calendars.each do |calendar| %>
<div class="single_calendar">
  <h4><%= calendar.name %></h4>
  <br>
  <%= month_calendar events: calendar.events do |date,events| %>

    <h4><%= date.day %>.<br>

    <%= link_to "Add Event", "/events/new" %>

    <% events.each do |event| %>
      <% if event.calendar == calendar %>
       <div>
         <li><%= link_to event.title,  "/events/#{event.id}"%></li>

       </div>
      <% end %>
    <% end %>
  <% end %>
</div>
<% end %>





